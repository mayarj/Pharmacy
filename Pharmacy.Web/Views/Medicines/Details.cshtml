@model Pharmacy.Domain.Entities.MedicineDTO

@{
    ViewData["Title"] = "Details";
    bool isAdmin = false;
    if (this.User.IsInRole("Admin"))
    {
        isAdmin = true;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else if (this.User.IsInRole("User"))
    {
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutNoLogin.cshtml";
    }
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Medicine Details</h1>
            <hr />
            <div class="row">
                <div class="col-md-8">
                    <div>
                        <h4>Medicine</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.TradeName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.TradeName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Dose)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Dose)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.InStock)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.InStock)
                            </dd>
                            <dt class="col-sm-4">
                                Category
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CategoryName)
                            </dd>
                            <dt class="col-sm-4">
                                ActiveSubstance
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.ActiveSubstanceName)
                            </dd>
                            <dt class="col-sm-4">
                                Factory
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.FactoryName)
                            </dd>
                        </dl>
                    </div>
                    <hr />
                    <h1>Ingredients</h1>

                    <table class="table table-hover table-striped mt-4">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ingredient in ViewBag.Ingredients)
                            {
                                <tr>
                                    <td>@ingredient.Name</td>
                                    <td>@ingredient.Ratio</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="mt-4">
                        @if(isAdmin){<a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>}
                        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
