@model Pharmacy.Web.VWModels.Medicines.EditMedicineVWModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Edit Medicine</h1>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Dose" class="control-label"></label>
                            <input asp-for="Dose" class="form-control" />
                            <span asp-validation-for="Dose" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ActiveSubstanceId" class="control-label"></label>
                            <select asp-for="ActiveSubstanceId" class="form-control" asp-items="ViewBag.ActiveSubstanceId">
                                <option value="">-- Select Active Substance --</option>
                            </select>
                            <span asp-validation-for="ActiveSubstanceId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="InStock" class="control-label"></label>
                            <input asp-for="InStock" class="form-control" />
                            <span asp-validation-for="InStock" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="FactoryId" class="control-label"></label>
                            <select asp-for="FactoryId" class="form-control" asp-items="ViewBag.FactoryId">
                                <option value="">-- Select Factory --</option>
                            </select>
                            <span asp-validation-for="FactoryId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="TradeName" class="control-label"></label>
                            <input asp-for="TradeName" class="form-control" />
                            <span asp-validation-for="TradeName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mt-4">
                            <input type="submit" value="Edit" class="btn btn-primary " />
                            <a href="@Url.Action("EditIngredients", "Medicines", new { id = Model.Id })" class="btn btn-primary  ms-2">Edit Ingredients</a>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
