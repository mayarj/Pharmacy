@{
    ViewData["Title"] = "Home Page";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else if(User.IsInRole("User"))
    {
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutNoLogin.cshtml";
    }
}


<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1 class="display-4">Welcome to Our Pharmacy</h1>
        <p class="lead">Your health is our priority</p>
        <a href="#services" class="btn btn-primary btn-lg">Explore Our Services</a>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="container mt-5">
    <h2 class="section-heading text-center">Our Services</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="medicine.jpg" class="card-img-top" alt="Medicine">
                <div class="card-body">
                    <h5 class="card-title">Medication</h5>
                    <p class="card-text">We offer a wide range of prescription and over-the-counter medications.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="consultation.jpg" class="card-img-top" alt="Consultation">
                <div class="card-body">
                    <h5 class="card-title">Consultation</h5>
                    <p class="card-text">Speak to our experienced pharmacists for advice and guidance on your medications.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="delivery.jpg" class="card-img-top" alt="Delivery">
                <div class="card-body">
                    <h5 class="card-title">Home Delivery</h5>
                    <p class="card-text">Convenient home delivery service for your medications.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="container mt-5 mb-5">
    <h2 class="section-heading text-center">Contact Us</h2>
    <p class="text-center">123 Pharmacy Street, City, Country</p>
    <p class="text-center">Phone: 123-456-7890 | Email: info@pharmacy.com</p>
</section>

