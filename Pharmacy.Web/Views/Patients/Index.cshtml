@model IEnumerable<Pharmacy.Domain.Entities.EntitiePatient>

@{
    ViewData["Title"] = "Patients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Patients</h1>
            <p class="lead">
                Manage your patients below or <a class="btn btn-primary" asp-action="Create">Create New</a>
            </p>
            <table class="table table-hover table-striped mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                        <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.FirstName + " " + item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            @{
                                var processedPhoneNumber = (int)(item.PhoneNumber);
                                var res = "0" + processedPhoneNumber.ToString();
                                <td>@res</td>
                            }
                            <td class="text-end">
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
}
