@model IEnumerable<Pharmacy.Domain.Entities.IngredientDTO>

@{
    ViewData["Title"] = "Ingredients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Ingredients</h1>
            <p class="lead">
                Manage your Ingredients below or <a class="btn btn-primary" asp-action="Create">Create New</a>
            </p>
            <hr />
            <table class="table table-hover table-striped mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-end">
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <form style="display:inline;" asp-action="Delete" asp-route-id="@item.Id" onsubmit="ConfirmDeleteIngredient(event);">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
}
